@page
@model LoginModel
@{
    Layout = null;
}

@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>
<div class="">
    <div class="">
        <section>
            <form id="account" method="post" class=""> 
                <hr />
                <div asp-validation-summary="ModelOnly" class="" role="alert"></div>
                <div class="">
                    <input asp-for="Input.Email" class="" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="">Email</label>
                    <span asp-validation-for="Input.Email" class=""></span>
                </div>
                <div class="">
                    <input asp-for="Input.Password" class="" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="">Password</label>
                    <span asp-validation-for="Input.Password" class=""></span>
                </div>
                <div class="">
                    <label asp-for="Input.RememberMe" class="">
                        <input class="" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="">Log in</button>
                </div>
                @* Comment the div containing: 
                        1 - The "forgot password" question and link to send an e-mail
                        2 - The "resend email confirmation" option and link, as the Send email option is not contemplated in this codebase, is set to false , nor a true email server has been configured.
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
                *@
                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
    @* Comment out the section containing The logic to connect to another authentication system
    <div class="col-md-6 col-md-offset-2">

        <section>
            <h3>Use another service to log in.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
    *@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
